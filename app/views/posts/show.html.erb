<h1>My SBlog</h1>
<p class="notice"><%= notice %></p>
 
<h2><%= @post.titulo %></h2>
<p><%= @post.conteudo %></p>
 
<h3>Comentarios</h3>
<% @post.comentarios.each do |comentario| %>
  <p>
	<b>Autor:</b>
	<%= comentario.autor %>
  </p>
 
  <p>
	<b>Comentario:</b>
	<%= comentario.conteudo %>
  </p>

<hr />
<% end %>
 
<h3>Adicione um comentario:</h3>
<%= form_for([@post, @post.comentarios.build]) do |f| %>
  <div class="field">
	<%= f.label :autor %><br />
	<%= f.text_field :autor %>
  </div>
  <div class="field">
	<%= f.label :conteudo %><br />
	<%= f.text_area :conteudo %>
  </div>
  <div class="actions">
	<%= f.submit %>
  </div>
<% end %>
 
<br />
 

<%= link_to 'Back', posts_path %>
